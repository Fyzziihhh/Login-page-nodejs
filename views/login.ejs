<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
<link rel="stylesheet" href="/style/login.css">

  </head>
  <body>
    <div class="main-wrapper"></div>
    <header>
      <section class="wrapper">
        <div class="top">USER LOGIN</div>
        <div class="bottom" aria-hidden="true">USER LOGIN</div>
      </section>
    </header>

    <div class="container">
      <div class="login-box">
        <h2>Login</h2>
        <% if (errorMessage) { %>
            <p style="color: red; margin-left: 80px;"><%= errorMessage %></p>
          <% } %>
        <form action="/login" method="POST" id="loginForm" novalidate>
            <div class="input-box">
                <input id="email" name="email" type="email"/>
                <label>Email</label>
                <span id="emailError" class="error-message"></span>
            </div>
            <div class="input-box">
                <input id="password" name="password" type="password"/>
                <label>Password</label>
                <span id="passwordError" class="error-message"></span>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
          
      </div>
    </div>
    <script>
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const emailError = document.getElementById('emailError');
        const passwordError = document.getElementById('passwordError');
        const loginForm = document.getElementById('loginForm');
    
        loginForm.addEventListener("submit", (e) => {
            let isValid = true;
            emailError.innerHTML = '';
            passwordError.innerHTML = '';
            
            // Validation checks for email
            const emailCheck = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailInput.value.match(emailCheck)) {
                e.preventDefault();
                emailError.innerHTML = "Please enter a valid email address";
                isValid = false;
            }
    
            // Validation check for password length
            if (passwordInput.value.length < 6) {
                e.preventDefault();
                passwordError.innerHTML = "Password must be at least 6 characters long";
                isValid = false;
            }
    if(isValid){
        loginForm.submit()
        emailError.innerHTML = '';
            passwordError.innerHTML = '';

    }
             
        });
    </script>
    
    
      
  </body>
</html>